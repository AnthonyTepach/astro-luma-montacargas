<section class="bg-white-100 ">

    <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8 ">

      <div class="grid grid-cols-1 gap-x-16 gap-y-8 lg:grid-cols-5 ">
        
        <div class="lg:col-span-2 lg:py-12">

          <div class="mt-1 center ">
      
            <iframe class="w-full aspect-video" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3737.155175302447!2d-103.25036786580092!3d20.499864086866552!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8428ad9b3b58a02b%3A0x3ddc195f8a18b195!2sLUMA%20MONTACARGAS!5e0!3m2!1sen!2smx!4v1674250975218!5m2!1sen!2smx" width="" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        
        
        </div>
      <div class="rounded-lg  lg:col-span-3 lg:p-10">
        <div class="mt-1">
                <ahref="" class="text-2xl font-bold text-BLACK-600 ">CONTACTO</a>
                <form action="" class="space-y-2 lg:py-12">
            <div>
              <label class="sr-only border" for="name">Nombre</label>
              <input
                class="w-full rounded-lg border-gray-200 p-3 text-sm bg-gray-100"
                placeholder="Tu nombre"
                type="text"
                id="name"/>
            </div>
  
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <label class="sr-only" for="email">Correo</label>
                <input
                  class="w-full rounded-lg border-gray-200 p-3 text-sm bg-gray-100"
                  placeholder="Email"
                  type="email"
                  id="email"
                />
              </div>
  
              <div>
                <label class="sr-only  p-8 shadow-lg" for="phone">telefono</label>
                <input
                  class="w-full rounded-lg border-gray-200 p-3 text-sm bg-gray-100"
                  placeholder="Telefono"
                  type="tel"
                  id="phone"
                />
              </div>
            </div>
            <div>
              <label class="sr-only" for="message">Message</label>
              <textarea
                class="w-full rounded-lg border-gray-200 p-3 text-sm bg-gray-100"
                placeholder="Mensaje (Opcional)"
                rows="5"
                id="message"
              ></textarea>
            </div>
  
            <div class="mt-4">
                <button
                <a
                href="#"
                class="inline-flex items-center rounded-full bg-green-600 px-8 py-3 text-white shadow-lg transition hover:bg-green-700 focus:outline-none focus:ring"
              >
                <span class="text-sm font-medium">Enviar</span>
    
                <svg
                  class="ml-3 h-5 w-5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
                </button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  

 